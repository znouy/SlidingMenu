<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 头像 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_main_content_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="onToggle"
                android:src="@drawable/default_head" />
        </RelativeLayout>

        <!-- 文本 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/news"
                style="@style/tag_style"
                android:drawableLeft="@drawable/tab_news"
                android:text="头条" />

            <TextView
                android:id="@+id/blog"
                style="@style/tag_style"
                android:drawableLeft="@drawable/tab_read"
                android:text="博客" />

            <TextView
                android:id="@+id/question"
                style="@style/tag_style"
                android:drawableLeft="@drawable/tab_local"
                android:text="问答" />

            <TextView
                android:id="@+id/bbs"
                style="@style/tag_style"
                android:drawableLeft="@drawable/tab_ties"
                android:text="论坛" />

            <TextView
                android:id="@+id/my"
                style="@style/tag_style"
                android:drawableLeft="@drawable/tab_pics"
                android:text="我的" />
        </LinearLayout>
        <!-- 模式 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>